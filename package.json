{
  "name": "svelte-settings",
  "version": "1.0.1",
  "repository": {
    "url": "git+https://github.com/kaiser-jan/svelte-settings.git"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./migration": "./dist/utils/migration.js"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.37.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@sveltejs/adapter-auto": "^6.1.1",
    "@sveltejs/kit": "^2.46.4",
    "@sveltejs/package": "^2.5.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.14",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.7.2",
    "@vitest/browser": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^16.4.0",
    "playwright": "^1.56.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "publint": "^0.3.14",
    "semantic-release-json-changelog-generator": "^1.0.2",
    "svelte-check": "^4.3.3",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.1.9",
    "vitest": "^3.2.4",
    "vitest-browser-svelte": "^1.1.0"
  },
  "dependencies": {
    "@internationalized/date": "^3.10.0",
    "@lucide/svelte": "^0.545.0",
    "bits-ui": "^2.11.5",
    "clsx": "^2.1.1",
    "luxon": "^3.7.2",
    "svelte": "^5.39.11",
    "svelte-dnd-action": "^0.9.65",
    "svelte-gestures": "^5.2.2",
    "svelte-persisted-store": "^0.12.0",
    "sveltekit-search-params": "^3.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tw-animate-css": "^1.4.0"
  },
  "keywords": [
    "svelte",
    "settings",
    "shadcn-svelte"
  ]
}
